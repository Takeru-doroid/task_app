<h3>スケジュール編集</h3>

<%= form_with model: @task do |f| %>
<table>
    <tr>
        <th><%= f.label :title, "タイトル" %></th>
        <td><%= f.text_field :title, style: "width:100%", placeholder: "タイトルを入力してください" %></td>
    </tr>
    <tr>
        <th><%= f.label :start_date, "開始日" %></th>
        <td><%= f.date_field :start_date, style: "width:100%" %></td>
    </tr>
    <tr>
        <th><%= f.label :end_date, "終了日" %></th>
        <td><%= f.date_field :end_date, style: "width:100%" %></td>
    </tr>
    <tr>
        <th><%= f.label :check, "終日" %></th>
        <td>
            <%= f.check_box(:check, {:checked => true}, checked_value = "○", unchecked_value = "") %>
            <%= label_tag :check, "終日の場合はチェックを入れます", style: "width:100%" %>
        </td>
    </tr>
    <tr>
        <th><%= f.label :schedule, "スケジュールメモ" %></th>
        <td><%= f.text_area :schedule, size: "35x13", placeholder: "メモ欄です" %></td>
    </tr>
</table>

<div>
    <ul>
        <li><%= f.submit "スケジュールの編集を完了する" %></li>
        <li><%= link_to "スケジュール一覧にもどる", :tasks %></li>
    </ul>
</div>
<% end %>

    <footer>
      <h1>
          現在の日時：<%= Date.current.strftime('%Y年%m月%d日') %>
      </h1>
    </footer>

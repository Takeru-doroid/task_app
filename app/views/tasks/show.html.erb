<h3>スケジュール詳細</h3>

<table>
    <tr>
        <th>タイトル</th>
        <td><%= @task.title %></td>
    </tr>
    <tr>
        <th>開始日</th>
        <td><%= @task.start_date.to_s(:date_jp) %></td>
    </tr>
    <tr>
        <th>終了日</th>
        <td><%= @task.end_date.to_s(:date_jp) %></td>
    </tr>
    <tr>
        <th>終日</th>
        <td><%= @task.check %></td>
    </tr>
    <tr>
        <th>スケジュールメモ</th>
        <td><%= @task.schedule %></td>
    </tr>
</table>

<div>
    <ul>
        <li><%= link_to "スケジュール一覧にもどる", :tasks %></li>
        <li><%= link_to "スケジュールを編集する", [:edit, @task]%></li>
        <li><%= link_to "スケジュールを削除する", @task, method: :delete, data: { confirm: "本当に削除しますか？"} %></li>
    </ul>
</div>

    <footer>
      <h1>
          現在の日時：<%= Date.current.strftime('%Y年%m月%d日') %>
      </h1>
    </footer>
